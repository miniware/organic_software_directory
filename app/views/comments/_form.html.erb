<%= form_with model: [comment.commentable, comment], class: "p-2 shadow-inner border border-black/10 rounded overflow-hidden" do |form| %>
  <div class="field space-y-1">
    <%= form.label :body, "Your thoughts?" %>
    <%= form.text_area :body, rows: 4, class: "textarea rounded" %>
  </div>
  <div class="actions">
    <%= form.submit class: "button float-right" %>
  </div>
<% end %>
