<div class="" id="<%= dom_id @listing %>">
  <% if @listing.icon.present? %>
    <img src="<%= @listing.icon %>" alt="<%= @listing.title %>'s Icon">
  <% end %>
  <header class="">
    <h1 class="font-bold text-4xl"><%= @listing.title %></h1>
    <p><%= link_to @listing.link, class: "font-mono" %></p>
  </header>

  <% if @listing.description.present? %>
    <p><%= @listing.description %></p>
  <% end %>
</div>
